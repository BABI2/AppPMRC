@using WebAppPMRC.ViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="form-container">
    <!-- Logo -->
    <img src="https://via.placeholder.com/50" alt="Logo" class="mb-3 d-block mx-auto">
    <h1 class="text-center mb-4">Login</h1>

    <!-- Form -->
    <form asp-action="Login" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Email -->
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" aria-label="Email address">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" aria-label="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Forgot password -->
        <div class="float-end mb-3">
            <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none disabled-link" aria-label="Forgot password?">
                Forgot password?
            </a>
        </div>

        <!-- Remember Me -->
        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" id="RememberMe" />
            <label class="form-check-label" for="RememberMe">
                Remember Me
            </label>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-custom w-100 py-2">Login</button>

        <!-- Register -->
        <p class="text-center mt-3">
            Don't have an account?
            <a asp-controller="Account" asp-action="Register" class="text-decoration-none disabled-link" >Register</a>
        </p>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
