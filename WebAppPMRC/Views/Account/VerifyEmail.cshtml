@using WebAppPMRC.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="form-container">
    <!-- Logo -->
    <img src="https://via.placeholder.com/50" alt="Logo" class="mb-3">
    <h1>Verify Email</h1>

    <!-- Form -->
    <form asp-action="VerifyEmail" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Verify Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-custom">Verify</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

