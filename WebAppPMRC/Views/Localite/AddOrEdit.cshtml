@model WebAppPMRC.ViewModels.LocaliteViewModel

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2>@(Model.Id == 0 ? "Add a Locality" : "Modify a Locality")</h2>

        <form asp-action="AddOrEdit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.Regions">
                    <option value="">Select a Region</option>
                </select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-success">Save</button>
                <a href="@Url.Action("Index", "Localite")" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
