@model WebAppPMRC.ViewModels.NumeroDossierViewModel

<h2>@(Model.Id == 0 ? "Add a case number" : "Edit a case number")</h2>

<form asp-action="AddOrEdit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DossierNumero"></label>
        <input asp-for="DossierNumero" class="form-control" />
        <span asp-validation-for="DossierNumero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonId">Personne associée</label>
        <select asp-for="PersonId" class="form-control" asp-items="@(new SelectList(ViewBag.PersonList, "Id", "FullName"))">
            <option value="">-- Sélectionner une personne --</option>
        </select>
        <span asp-validation-for="PersonId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
